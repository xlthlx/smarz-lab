{
  "name": "xlthlx/smarz-lab",
  "type": "wordpress-theme",
  "description": "",
  "keywords": [
	"WordPress",
	"Themes"
  ],
  "homepage": "https://smarz-lab.com",
  "license": "GPL-2.0-or-later",
  "authors": [
	{
	  "name": "xlthlx",
	  "homepage": "https://xlthlx.com"
	}
  ],
  "require": {
	"php": ">=7.4",
	"rosell-dk/webp-convert": "^2.9",
	"deeplcom/deepl-php": "^0.4.0",
	"cmb2/cmb2": "^2.10",
	"johnbillion/extended-cpts": "^5.0",
	"composer/installers": "^2.1",
	"benmorel/ebay-sdk-php": "^19.0"
  },
  "require-dev": {
	"dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
	"wptrt/wpthemereview": "^0.2.1",
	"php-parallel-lint/php-parallel-lint": "^1.2.0",
	"wp-cli/i18n-command": "^2.2.5",
	"dxw/phar-install": "^1.1.2"
  },
  "scripts": {
	"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --ignore=vendor/*,git/*,cmb2/* -n --report-file=report.txt",
	"lint:wpcs:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --ignore=vendor/*,git/*,cmb2/*",
	"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor .",
	"make-pot": "wp i18n make-pot . languages/smarz-lab.pot",
	"post-update-cmd": "vendor/bin/phar-install"
  },
  "config": {
	"allow-plugins": {
	  "dealerdirect/phpcodesniffer-composer-installer": true,
	  "composer/installers": true
	}
  },
  "extra": {
	"installer-paths": {
	  "inc/{$vendor}/{$name}/": [
		"type:wordpress-plugin"
	  ]
	}
  }
}
